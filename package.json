{
  "name": "grammy-test",
  "version": "0.2.0",
  "description": "Testing framework for grammY",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "tsx bin/test.ts",
    "test:watch": "tsx --watch bin/test.ts",
    "test:coverage": "c8 --reporter=lcov --include src npm run test",
    "test:coverage:watch": "nodemon --exec c8 --include src npm run test",
    "publish": "npm run build && npm publish"
  },
  "keywords": [
    "grammy",
    "telegram",
    "bot",
    "testing",
    "framework"
  ],
  "peerDependencies": {
    "grammy": "^1.0.0"
  },
  "devDependencies": {
    "@grammyjs/menu": "^1.3.0",
    "@japa/assert": "^4.0.1",
    "@japa/runner": "^4.2.0",
    "@types/node": "^18.0.0",
    "c8": "^10.1.3",
    "grammy": "^1.0.0",
    "nodemon": "^3.1.9",
    "tsx": "^4.19.3",
    "typescript": "^5.0.0"
  }
}